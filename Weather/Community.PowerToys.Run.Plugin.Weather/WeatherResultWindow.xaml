<Window x:Class="Community.PowerToys.Run.Plugin.Weather.WeatherResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather Details"
        Height="450"
        Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    <Border Background="#2D2D30" CornerRadius="8" Margin="10" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with location and temp -->
            <TextBlock x:Name="TitleTextBlock" 
                     Grid.Row="0"
                     FontSize="24"
                     FontWeight="Bold"
                     Foreground="#FFFFFF"
                     Margin="0,0,0,10"/>

            <!-- Condition with icon -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Weather Icon -->
                <Image x:Name="WeatherIcon" 
                       Width="40" 
                       Height="40" 
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"/>

                <!-- Condition text -->
                <TextBlock x:Name="ConditionTextBlock"
                          Grid.Column="1"
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="#88CCFF"
                          VerticalAlignment="Center"/>
            </Grid>

            <!-- Weather details -->
            <StackPanel Grid.Row="2">
                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ðŸŒ¡" FontSize="16" Foreground="#FFCC00" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TemperatureTextBlock" Grid.Column="1" FontSize="14" Foreground="#E0E0E0"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ðŸ¤”" FontSize="16" Foreground="#FFCC00" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="FeelsLikeTextBlock" Grid.Column="1" FontSize="14" Foreground="#E0E0E0"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ðŸ’§" FontSize="16" Foreground="#FFCC00" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="HumidityTextBlock" Grid.Column="1" FontSize="14" Foreground="#E0E0E0"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ðŸŒ¬ï¸" FontSize="16" Foreground="#FFCC00" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="WindTextBlock" Grid.Column="1" FontSize="14" Foreground="#E0E0E0"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ðŸ•’" FontSize="16" Foreground="#FFCC00" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TimeTextBlock" Grid.Column="1" FontSize="14" Foreground="#E0E0E0"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>